<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="leagueResponse"
                type="com.belzsoftware.futspect.model.league.LeagueResponse" />

        <variable
                name="clickListener"
                type="android.view.View.OnClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:onClick="@{clickListener}">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_league_logo"
                    setLeagueLogo="@{leagueResponse}"
                    android:layout_width="@dimen/league_imageView_heightWidth"
                    android:layout_height="@dimen/league_imageView_heightWidth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_league_name"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:ellipsize="end"
                    android:text="@{leagueResponse.league.name}"
                    app:layout_constraintStart_toEndOf="@id/imageView_league_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Premier League" />

            <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:text="@{leagueResponse.country.name}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView_league_logo"
                    app:layout_constraintTop_toBottomOf="@id/textView_league_name"
                    tools:text="England" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

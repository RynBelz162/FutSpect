<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView_league_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        app:cardCornerRadius="0dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_league_logo"
                android:layout_width="@dimen/league_card_icon_heightWidth"
                android:layout_height="@dimen/league_card_icon_heightWidth"
                android:layout_marginStart="@dimen/margin_small"
                tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_league_name"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:ellipsize="end"
                tools:text="Premier League" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

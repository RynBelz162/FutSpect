<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="league"
                  type="com.belzsoftware.futspect.model.league.League"/>
    </data>

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:layout_marginTop="@dimen/margin_table_card"
                                                       android:layout_marginLeft="@dimen/margin_table_card"
                                                       android:layout_marginRight="@dimen/margin_table_card">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="@dimen/margin_small"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textColor="@color/secondaryTextColor"
                      android:textSize="@dimen/header_six"
                      android:text="@{league.name}"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textColor="@color/secondaryTextColor"
                      android:textSize="@dimen/body_two"
                      android:text="@{league.area.name}"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

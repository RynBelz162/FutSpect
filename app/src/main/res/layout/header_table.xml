<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rankTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/table_header_rank"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toStartOf="@+id/nameTextView"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/table_header_team"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toStartOf="@+id/winsTextView"
            app:layout_constraintHorizontal_weight="10"
            app:layout_constraintStart_toEndOf="@+id/rankTextView"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/winsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/table_header_win"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toStartOf="@+id/drawTextView"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/nameTextView"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drawTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/table_header_draw"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toStartOf="@+id/lossTextView"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/winsTextView"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lossTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/table_header_loss"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toStartOf="@+id/pointsTextView"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/drawTextView"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pointsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/table_header_points"
            android:textSize="@dimen/body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/lossTextView"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView_league_group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_league_header_flag"
                android:layout_width="@dimen/league_card_icon_heightWidth"
                android:layout_height="@dimen/league_card_icon_heightWidth"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_normal"
                tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_league_header_title"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="1"
                tools:text="England" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_league_group_header"
                android:layout_width="@dimen/league_group_header_chevron_heightWidth"
                android:layout_height="@dimen/league_group_header_chevron_heightWidth"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/ic_down_arrow" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
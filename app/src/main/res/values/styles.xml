<resources>

    <style name="Widget.FutSpect.MoreButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Futspect.Button.Muted" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.FutSpect.TitleHeader" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="Widget.FutSpect.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/bg_chip_filter_state_list</item>
        <item name="checkedIcon">@drawable/ic_check_white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
